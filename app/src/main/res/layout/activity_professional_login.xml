<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".professional_login_activity"
    android:background="#ADD8E6">

    <ImageView
        android:id="@+id/image_logo_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/txt_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_logo_icon"
        android:text="NIRAMAYA"
        android:textSize="30sp"
        android:textColor="#E73232"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        style="@style/CustomFontStyle"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/edt_email_login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Email"
        android:background="@color/white"
        android:layout_below="@+id/txt_appname"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/edt_password_login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Password"
        android:background="@color/white"
        android:layout_below="@+id/edt_email_login"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginTop="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submit_login"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Sign In"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/edt_password_login"
        android:background="#9C27B0"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:padding="5dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>